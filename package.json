{
  "name": "swades-ai-support-system",
  "private": true,
  "packageManager": "pnpm@10.29.2",
  "scripts": {
    "dev": "cd apps/api && pnpm dev & cd apps/web && npx vite --port 5173",
    "dev:turbo": "turbo dev",
    "dev:api": "cd apps/api && pnpm dev",
    "dev:node": "cd apps/api && node --import tsx --watch src/start-node.ts & cd apps/web && npx vite --port 5173",
    "dev:web": "cd apps/web && npx vite --port 5173",
    "build": "turbo build",
    "build:api": "turbo build --filter=api",
    "db:push": "turbo db:push --filter=api",
    "db:seed": "turbo db:seed --filter=api",
    "db:generate": "turbo db:generate --filter=api",
    "db:migrate": "turbo db:migrate --filter=api",
    "db:studio": "turbo db:studio --filter=api",
    "db:setup": "pnpm db:push && pnpm db:seed"
  },
  "devDependencies": {
    "shadcn": "^3.8.4",
    "turbo": "^2.3.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.3.23",
      "@types/react-dom": "^18.3.7"
    }
  }
}