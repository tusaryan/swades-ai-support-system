{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".output/**"
            ]
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "db:generate": {
            "cache": false
        },
        "db:migrate": {
            "cache": false
        },
        "db:push": {
            "cache": false
        },
        "db:seed": {
            "cache": false
        },
        "db:studio": {
            "cache": false,
            "persistent": true
        }
    }
}