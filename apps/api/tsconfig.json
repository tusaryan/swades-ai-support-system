{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": true,
    "types": [
      "node"
    ],
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*.ts",
    "drizzle/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}